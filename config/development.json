{
  "database": {
    "host": "localhost",
    "port": 5432,
    "database": "contextualforget_dev",
    "username": "postgres",
    "password": "",
    "pool_size": 5,
    "max_overflow": 10
  },
  "cache": {
    "redis_host": "localhost",
    "redis_port": 6379,
    "redis_db": 1,
    "redis_password": null,
    "cache_ttl": 1800,
    "max_cache_size": 1000
  },
  "logging": {
    "level": "DEBUG",
    "log_file": "logs/app.log",
    "max_file_size": 10485760,
    "backup_count": 3,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  "performance": {
    "max_workers": 2,
    "chunk_size": 500,
    "memory_limit_mb": 512,
    "query_timeout": 30,
    "batch_size": 50
  },
  "security": {
    "secret_key": "dev-secret-key-change-in-production",
    "allowed_hosts": ["localhost", "127.0.0.1", "0.0.0.0"],
    "cors_origins": ["http://localhost:3000", "http://localhost:8080"],
    "rate_limit": 100
  },
  "monitoring": {
    "enabled": true,
    "collection_interval": 120,
    "metrics_retention_hours": 24,
    "health_check_interval": 60,
    "alert_thresholds": {
      "cpu_percent": 90.0,
      "memory_percent": 95.0,
      "disk_usage_percent": 95.0,
      "query_avg_time": 10.0
    }
  }
}
